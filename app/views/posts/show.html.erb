<div id="post_body">
  <h1>
    <%= @post.title %>
  </h1>
  <p><span class="left"><%= @post.user.email %></span>
 
    <%= simple_format(strip_tags(@post.context)) %>
  </p>
  <% if current_user == @post.user%>
  <%= link_to "Delete Post", post_path(@post), method: :delete %> 
  <% end %>
<div id="comments">
  <%= render @post.comments %>
<h3>
  <%= render "comments/form" %>
</h3>
<br>
  <br/>
</br>
  </div>
</div>


