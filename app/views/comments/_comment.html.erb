<div class="comment clearfix">
  <div class="content">
    <p class="comment_content">
      <%= comment.comment %>
    </p>
    <p class="comment_author">
      <%= comment.user.email %>
    </p>
  </div>
  <div class="buttons">
    <%= link_to "Delete", [comment.post, comment], method: :delete%>
  </div>
</div>